<div class="card">
  <div class="card-header">
    <strong> Summary </strong>
  </div>

  <div class="card-body">
    <p>
      <strong><%= t('activerecord.attributes.import_job.id') %>:</strong>
      <%= import_job.id %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= status_text(import_job) %>
    </p>

    <p>
      <strong><%= t('activerecord.attributes.import_job.name') %>:</strong>
      <%= import_job.name %>
    </p>

    <p>
      <strong><%= t('activerecord.attributes.import_job.model') %>:</strong>
      <%= import_job.model %>
    </p>

    <p>
      <strong><%= t('activerecord.attributes.import_job.access') %>:</strong>
      <%= import_job.access %>
    </p>

    <p>
      <strong><%= t('activerecord.attributes.import_job.collection') %>:</strong>
      <%= import_job.collection %>
    </p>

    <p>
      <strong><%= t('activerecord.attributes.import_job.cas_user') %>:</strong>
      <%= import_job.cas_user&.name %>
    </p>

    <p>
      <strong><%= t('activerecord.attributes.import_job.timestamp') %>:</strong>
      <%= import_job.timestamp %>
    </p>

    <p>
      <strong><%= t('activerecord.attributes.import_job.metadata_file') %>:</strong>
      <%= import_job.metadata_file.filename %>
    </p>
  </div>
</div>
