<% if !import_job_info.failed.empty? %>
  <strong>
    Dropped Items (<%= import_job_info.failed.count %>)
  </strong>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>ID</th>
        <th>Timestamp</th>
        <th>Title</th>
        <th>Error</th>
      </tr>
    </thead>

    <tbody>
      <% import_job_info.failed.each_with_index do |item, index| %>
        <tr>
          <td><%= (index+1) %></td>
          <td><%= item['id'] %></td>
          <td><%= item['timestamp'] %></td>
          <td><%= item['title'] %></td>
          <td><%= item['reason'] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>There are no dropped items for this import job.</p>
<% end %>
